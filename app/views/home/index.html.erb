<% if notice %>
<div class="alert alert-dismissable alert-success">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <%= notice %>
</div>
<% end %>

<div class="col-lg-12">
  <div class="page-header">
    <h1 id="tables"><%= t('listing_your_debts') %></h1>
  </div>

  <div class="bs-component">
    <table class="table table-striped table-hover ">

      <thead>
        <tr>
          <th><%= t('title') %></th>
          <th><%= t('amount') %></th>
          <th><%= t('created_by') %></th>
          <th><%= t('issue_date') %></th>
<!--           <th colspan="2"></th> -->
        </tr>
      </thead>

      <tbody>
        <% @debts.each do |debt| %>
          <tr>
            <td><%= debt.title %></td>
            <td><%= debt.amount %></td>
            <td><%= debt.user.name %></td>
            <td><%= debt.created_at.strftime("%d/%m/%Y %H:%M hs") %></td>
            <td><%= #link_to t('edit',obj: ""), edit_client_bill_path(@client,bill)
            %></td>
            <td><%= #link_to t('destroy'), client_bill_path(@client, bill), method: :delete, data: { confirm: t('are_you_sure') }
            %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= #link_to t('new_bill'), new_client_bill_path, class:"btn btn-primary"
%>
<%= #link_to t('back_to', first_name: @client.first_name, last_name: @client.last_name), client_path(@client), class:"btn btn-primary"
%>
