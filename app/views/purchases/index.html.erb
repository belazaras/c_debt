<% if notice %>
<div class="alert alert-dismissable alert-success">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <%= notice %>
</div>
<% end %>

<div class="col-lg-12">
  <div class="page-header">
    <h1 id="tables"><%= t('listing_purchases') %></h1>
  </div>

  <div class="bs-component">
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th><%= t('name') %></th>
          <th><%= t('amount') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @purchases.each do |purchase| %>
          <tr>
            <td><%= purchase.name %></td>
            <td><%= purchase.amount %></td>
            <td><%= link_to 'Mark as paid', pay_user_purchase_path(purchase) %></td>
            <td><%= link_to 'Edit', edit_user_purchase_path(@user,purchase) %></td>
            <td><%= link_to 'Destroy', user_purchase_path(@user,purchase), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<%= link_to 'New Purchase', new_user_purchase_path, class:"btn btn-primary" %>
