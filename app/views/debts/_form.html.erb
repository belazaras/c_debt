<div class="col-lg-6">
  <div class="well bs-component">
    <form class="form-horizontal">
      <fieldset>
        <legend></legend>

        <div class="form-group">
          <%= f.label :title, class:'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.text_field :title, class:'form-control', placeholder: :title, required: true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :amount, class:'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.text_field :amount, class:'form-control', placeholder: :amount, required: true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :owner, class:'col-lg-2 control-label'  %>
          <div class="col-lg-10">
            <%= f.select :owner_id, @users, {}, { class: "form-control", required: true } %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <%= link_to :cancel, user_debts_path, class:"btn btn-default" %>
            <button type="submit" class="btn btn-primary"><%= :submit %></button>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>
<% end %>
